<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/notification_bar_color</item>
        <item name="colorPrimaryVariant">@color/notification_bar_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/notification_bar_color</item>
        <item name="colorSecondaryVariant">@color/notification_bar_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/notification_bar_color</item>
        <item name="android:titleTextColor">@color/icon_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/MyToolbar</item>
        <item name="android:textColorPrimary">@color/icon_color</item>
        <item name="autoCompleteTextViewStyle">@style/CursorColor</item>
    </style>
</resources>